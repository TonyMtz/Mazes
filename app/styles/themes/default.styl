// Global vars, please, Keep it simple!
$borderIncrement = #333
$foregroundIncrement = #999
$anchorColor = #fff
$paddingMinimal = 0.1rem
$paddingBase = 0.25rem
$paddingBorderOffset = $paddingBase * 2

// Body
$defaultBackground = #141b25
$defaultColor = #666
$defaultIncrement = #111
$defaultHightlight = #666
$defaultHeight = 1em

// Buttons
$defaultButtonBackground = #892
$defaultButtonColor = $defaultButtonBackground + $foregroundIncrement
$defaultBorderColor = $defaultButtonBackground + $borderIncrement
$defaultButtonHeight = $defaultHeight * 2

// Fonts
$defaultFont = Helvetica, Arial, sans-serif
$emphasizeFont = 'Myriad Pro', Helvetica, Arial, sans-serif
$fontSizeXS = 0.5rem
$fontSizeSM = 0.75rem
$fontSizeMD = 1rem
$fontSizeLG = 1.25rem
$fontSizeXL = 1.5rem

// Header properties
$headerBackground = #1c242e
$headerColor = $headerBackground + $foregroundIncrement
$headerHighlightColor = $headerColor + $foregroundIncrement
$headerHeight = $defaultHeight * 5

// Footer properties
$footerBackground = #1c242e
$footerColor = $footerBackground + $foregroundIncrement
$footerHeight = $defaultHeight * 4
