// Size-related mixins
wide()
  height 100%
  margin 0
  padding 0
  width 100%

wideBar()
  left 0
  position absolute
  width 100%

wideBottomBar()
  wideBar()
  bottom 0

wideTopBar()
  wideBar()
  top 0


// UI-related stuff
toolbar()
  display inline-block
  float right

button()
  border-radius(5px)
  background $defaultButtonBackground
  border $paddingMinimal solid $defaultBorderColor
  clear none
  color $defaultButtonColor
  cursor pointer
  display inline-block
  padding $paddingMinimal $paddingBase * 5
